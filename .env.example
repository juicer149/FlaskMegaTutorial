# Flask configuration settings
FLASK_APP=app
FLASK_ENV=development
FLASK_DEBUG=1

# Secret key for session management and other security-related needs
SECRET_KEY=your-secret-key-here

# Database (change to production database URI in deployment)
DATABASE_URL=sqlite:///app.db

# Mail server configuration (for sending emails)
MAIL_SERVER=localhost
MAIL_PORT=8025
MAIL_USE_TLS=1
MAIL_USERNAME=your-mail-username
MAIL_PASSWORD=your-mail-password
MAIL_DEFAULT_SENDER=no-reply@yourdomain.local

# Admin emails (comma-separated list)
ADMINS=admin1@yourdomain.local,admin2@yourdomain.local

# Argon2id password hashing parameters
# Tweak these per environment (dev/staging/prod)
ARGON2_TIME_COST=8
ARGON2_MEMORY_COST=131072      # KiB (128 MB default)
ARGON2_PARALLELISM=2
ARGON2_HASH_LENGTH=32
ARGON2_SALT_LENGTH=16

# Secret pepper (do NOT check real value into version control)
ARGON2_PEPPER=your-secret-pepper-here
